{
    "name": "micha/cleverpath",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Micha\\Cleverpath\\": "public/"
        }
    },
    "authors": [
        {
            "name": "michael owope",
            "email": "michaelowope@gmail.com"
        }
    ],
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "setup": "composer install && npm install",
        "start:php": "php -d upload_max_filesize=15M -d post_max_size=15M -S localhost:3000 -t public && php app/web_server.php",
        "start:websocket": "php app/web_server.php",
        "dev": "concurrently \"composer start:php\" \"composer start:websocket\""
    },
    "require": {
        "cboden/ratchet": "^0.4.4",
        "vlucas/phpdotenv": "^5.6",
        "smalot/pdfparser": "^2.11",
        "guzzlehttp/guzzle": "^7.9",
        "monolog/monolog": "^3.8"
    }
}
